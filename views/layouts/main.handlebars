    <link rel="stylesheet" href="/css/style.css" type="text/css" />
    <script src="/js/jquery-3.1.0.js"></script>
    <script>
        $(function() {
            $('#logout').on('click', function() {
                $('.isLogout').show();
                $('.noLogout').on('click', function() {
                    $('.isLogout').hide();
                })
            })
        })
    </script>
    <script src="/js/{{js}}"></script>
</head>
<body>
